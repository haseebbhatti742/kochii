.testimonials
  .parallax_background(data-image-src='/images/about.jpg')
  |             
  .container
    .row
      .col-lg-9
       
     
    if serviceData.length == 0 
      h1 No Services Yet
    else if length > 0 
      .row.testimonials_row
        .col
          .section_expander
            // Testimonials Slider
            .testimonials_slider_container
              .owl-carousel.owl-theme.testimonials_slider
                // Slide
                each i in serviceData
                  .owl-item
                    .testimonial_container
                      .testimonial.d-flex.flex-column.align-items-center.justify-content-center.text-center.trans_200
                        .testimonial_image
                          img(src='/images/author_1.jpg', alt='')              
                        .testimonial_title #{i.service_name}                                           
                        .testimonial_text
                          p #{i.service_desc}
                        .testimonial_author  #{i.service_price}$
                        .testimonial_text 
                          if session.username != null
                            button.app_form_button Avail This Service
                          if session.username == null
                            button.app_form_button(onclick="goToLogin()") Avail This Service

